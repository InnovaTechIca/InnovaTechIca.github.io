---
import { eventosCronograma } from '../../data/cronograma';
import type { EventoCronograma } from '../../data/cronograma';

// Función para determinar el color según el tipo de evento
const getEventoColor = (tipo: EventoCronograma['tipo']) => {
  const colores = {
    'ponencia': 'bg-blue-600',
    'break': 'bg-teal-500',
    'sorteo': 'bg-purple-600',
    'inauguracion': 'bg-amber-600',
    'clausura': 'bg-red-600',
    'foto': 'bg-blue-500',
    'recibimiento': 'bg-green-600',
    'almuerzo': 'bg-orange-500'
  };
  
  return colores[tipo] || 'bg-gray-600';
};

// Agrupar eventos por rango horario
const mañana = eventosCronograma.filter(e => e.hora.includes('a.m.'));
const tarde = eventosCronograma.filter(e => e.hora.includes('p.m.'));

---

<div class="list-view hidden">
  <div class="space-y-10">
    <!-- Eventos de la mañana -->
    <section>
      <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-amber-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        Actividades de la mañana
      </h2>
      
      <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-200/50">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Hora</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actividad</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tipo</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Duración</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {mañana.map(evento => (
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{evento.hora}</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{evento.actividad}</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getEventoColor(evento.tipo)} text-white`}>
                    {evento.tipo.charAt(0).toUpperCase() + evento.tipo.slice(1)}
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{evento.duracion} min</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </section>
    
    <!-- Eventos de la tarde -->
    <section>
      <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z" />
        </svg>
        Actividades de la tarde
      </h2>
      
      <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-200/50">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Hora</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actividad</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tipo</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Duración</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {tarde.map(evento => (
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{evento.hora}</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{evento.actividad}</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getEventoColor(evento.tipo)} text-white`}>
                    {evento.tipo.charAt(0).toUpperCase() + evento.tipo.slice(1)}
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{evento.duracion} min</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </section>
  </div>
</div>
