---
// Componente interactivo para cambiar entre vistas de lista o timeline
---

<div class="mb-8 p-6 bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-gray-200/50 relative overflow-hidden transition-all hover:shadow-2xl">
  <!-- Elementos decorativos sutiles -->
  <div class="absolute inset-0 bg-gradient-to-r from-blue-50/30 to-indigo-50/30 opacity-60"></div>
  <div class="absolute top-0 right-0 w-40 h-40 bg-blue-100/30 rounded-full blur-2xl -translate-x-20 -translate-y-20"></div>
  
  <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-6 relative z-10">
    <h3 class="text-xl font-bold text-gray-800 flex items-center">
      <div class="p-2 bg-gradient-to-r from-blue-600 to-blue-500 rounded-lg shadow-md text-white mr-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
        </svg>
      </div>
      Vista del Cronograma
    </h3>

    <div class="flex items-center bg-white rounded-xl p-1.5 shadow-md border border-gray-100">
      <button id="viewTimeline" class="flex items-center px-5 py-2 rounded-lg bg-gradient-to-r from-blue-600 to-blue-500 text-white text-sm font-medium shadow-sm transition-all duration-300 hover:shadow">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        Timeline
      </button>
      <button id="viewList" class="flex items-center px-5 py-2 rounded-lg text-gray-700 text-sm font-medium transition-all duration-300 hover:bg-gray-50">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
        </svg>
        Lista
      </button>
    </div>
  </div>
</div>

<script>
  // LÃ³gica para cambio entre vistas
  const timelineBtn = document.getElementById('viewTimeline');
  const listBtn = document.getElementById('viewList');
  const timelineView = document.querySelector('.timeline-view');
  const listView = document.querySelector('.list-view');
  
  if (timelineBtn && listBtn && timelineView && listView) {
    // Estado inicial - Timeline activado
    listView.classList.add('hidden');
    
    timelineBtn.addEventListener('click', () => {
      // Activar Timeline
      timelineBtn.classList.add('bg-blue-600', 'text-white');
      timelineBtn.classList.remove('text-gray-700');
      listBtn.classList.remove('bg-blue-600', 'text-white');
      listBtn.classList.add('text-gray-700');
      
      // Mostrar vista correcta
      timelineView.classList.remove('hidden');
      listView.classList.add('hidden');
    });
    
    listBtn.addEventListener('click', () => {
      // Activar Lista
      listBtn.classList.add('bg-blue-600', 'text-white');
      listBtn.classList.remove('text-gray-700');
      timelineBtn.classList.remove('bg-blue-600', 'text-white');
      timelineBtn.classList.add('text-gray-700');
      
      // Mostrar vista correcta
      listView.classList.remove('hidden');
      timelineView.classList.add('hidden');
    });
  }
</script>
