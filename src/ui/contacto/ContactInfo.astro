---
// Componente de informaci√≥n de contacto


interface ContactItem {
  icon: string;
  title: string;
  content: string;
}

interface Props {
  items: ContactItem[];
  className?: string;
}

const { items, className = "" } = Astro.props;
---
<div class={`max-w-4xl mx-auto px-4 py-8 ${className}`}>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {items.map((item) => (
      <div class="bg-white rounded-xl p-6 shadow-lg border border-blue-100 text-center hover:shadow-xl transition-shadow flex flex-col items-center">
        <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4 flex-shrink-0">
          <Fragment set:html={item.icon} />
        </div>
        <h3 class="text-lg font-semibold text-gray-800 mb-2">{item.title}</h3>
        <p class="text-gray-600 break-words w-full overflow-hidden text-ellipsis">{item.content}</p>
      </div>
    ))}
  </div>
</div> 