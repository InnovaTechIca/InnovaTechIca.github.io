---
import { Image } from 'astro:assets';
import ColegioIngenieros from '/src/assets/colegio-ingenieros-en-Ica.jpg';
---

<section id="ubicacion" class="py-16 md:py-24 bg-gradient-to-br from-blue-50 via-white to-gray-50 relative overflow-hidden">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 z-0 overflow-hidden">
    <!-- Círculos decorativos difuminados -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-blue-200/30 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-20 -left-20 w-80 h-80 bg-blue-300/20 rounded-full blur-3xl"></div>
    <div class="absolute top-1/3 right-1/4 w-64 h-64 bg-sky-200/30 rounded-full blur-3xl"></div>
    
    <!-- Líneas decorativas -->
    <div class="hidden lg:block absolute top-32 left-0 w-1/3 h-px bg-gradient-to-r from-blue-200 to-transparent"></div>
    <div class="hidden lg:block absolute bottom-40 right-0 w-1/3 h-px bg-gradient-to-l from-blue-200 to-transparent"></div>
    
    <!-- Puntos decorativos -->
    <div class="hidden md:block absolute left-20 top-24 w-6 h-6 bg-blue-400 rounded-full opacity-20"></div>
    <div class="hidden md:block absolute right-32 bottom-16 w-4 h-4 bg-blue-500 rounded-full opacity-20"></div>
    
    <!-- Patrón de puntos sutiles -->
    <div class="absolute inset-0 opacity-5" 
         style="background-image: radial-gradient(#3b82f6 1px, transparent 1px); background-size: 30px 30px;"></div>
  </div>
  
  <div class="container mx-auto px-4 md:px-8 relative z-10">
    <!-- Encabezado de la sección -->
    <div class="text-center mb-14">
      <div class="inline-block relative mb-2">
        <span class="inline-block py-1 px-3 bg-blue-100 text-blue-600 text-sm font-semibold rounded-full">Ubicación</span>
        <div class="absolute -top-2 -right-2 w-3 h-3 bg-blue-400 rounded-full animate-pulse"></div>
        <div class="absolute -bottom-1 -left-1 w-2 h-2 bg-blue-300 rounded-full animate-pulse"></div>
      </div>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold bg-gradient-to-r from-blue-600 to-blue-400 bg-clip-text text-transparent">
        ¿Dónde se realizará?
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-blue-500 to-blue-300 mx-auto mt-4 rounded-full"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12 items-center">
      <!-- Mapa interactivo -->
      <div class="rounded-2xl overflow-hidden shadow-xl shadow-blue-100/50 border border-blue-50 bg-white h-[400px] md:h-[500px] transform hover:scale-[1.02] transition-transform duration-300 relative group">
        <!-- Overlay de gradiente que se desvanece en hover -->
        <div class="absolute inset-0 bg-gradient-to-t from-blue-900/30 to-transparent opacity-50 group-hover:opacity-0 transition-opacity duration-300 z-10"></div>
        
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4471.230642781893!2d-75.72808599337466!3d-14.076376117190422!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9110e29172cf48f7%3A0x778bc00fabad62e7!2sColegio%20de%20Ingenieros%20-%20Consejo%20Departamental%20de%20Ica!5e0!3m2!1ses!2spe!4v1746923324210!5m2!1ses!2spe"
          class="w-full h-full" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade"
          title="Mapa de ubicación del evento">
        </iframe>
      </div>

      <!-- Información de ubicación -->
      <div class="space-y-6 lg:space-y-8 p-2">
        <div class="bg-white p-8 rounded-2xl shadow-lg shadow-blue-100/50 border border-blue-50 transform hover:-translate-y-1 transition-transform duration-300">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-blue-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 22s-8-4.5-8-11.8A8 8 0 0 1 12 2a8 8 0 0 1 8 8.2c0 7.3-8 11.8-8 11.8z" />
                  <circle cx="12" cy="10" r="3" />
                </svg>
              </div>
            </div>
            <div class="flex-grow">
              <h3 class="text-xl font-bold text-gray-800 mb-2">Colegio de Ingenieros de Ica</h3>
              <p class="text-gray-600 leading-relaxed">
                Ca. Nardos 141<br>
                Ica, Perú
              </p>
            </div>
          </div>
        </div>

        <div class="bg-white p-8 rounded-2xl shadow-lg shadow-blue-100/50 border border-blue-50 transform hover:-translate-y-1 transition-transform duration-300">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-blue-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
              </div>
            </div>
            <div class="flex-grow">
              <h3 class="text-xl font-bold text-gray-800 mb-2">Fecha del evento</h3>
              <p class="text-gray-600 leading-relaxed">
                21 de junio del 2025<br>
                08:00 AM - 05:00 PM
              </p>
            </div>
          </div>
        </div>

        <div class="bg-white p-8 rounded-2xl shadow-lg shadow-blue-100/50 border border-blue-50 transform hover:-translate-y-1 transition-transform duration-300">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-blue-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
              </div>
            </div>
            <div class="flex-grow">
              <h3 class="text-xl font-bold text-gray-800 mb-2">Accesibilidad</h3>
              <ul class="text-gray-600 space-y-2">
                <li class="flex items-center">
                  <svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  Estacionamiento disponible
                </li>
                <li class="flex items-center">
                  <svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  Acceso para personas con discapacidad
                </li>
                <li class="flex items-center">
                  <svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  Wifi gratuito
                </li>
              </ul>
            </div>
          </div>
        </div>
        
        <!-- Botón para obtener dirección -->
        <div class="pt-4 text-center md:text-left">
          <a
            href="https://maps.app.goo.gl/ckUTt9XmAfZKe54S8"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-500 text-white font-medium rounded-xl shadow-lg hover:shadow-blue-200/50 hover:scale-105 transition-all duration-300 transform focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Cómo llegar
          </a>
        </div>
      </div>
    </div>
  </div>
</section>