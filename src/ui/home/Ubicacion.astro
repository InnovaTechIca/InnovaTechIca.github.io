---
import { Image } from "astro:assets";
import ColegioIngenieros from "/src/assets/colegio-ingenieros-en-Ica.jpg";
---

<section
  id="ubicacion"
  class="py-16 md:py-24 bg-gradient-to-br from-blue-50 via-white to-gray-50 relative overflow-hidden"
>
  <!-- Elementos decorativos de fondo mejorados con animaciones y profundidad -->
  <div class="absolute inset-0 z-0 overflow-hidden">
    <!-- Círculos decorativos con gradientes animados -->
    <div
      class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-br from-blue-200/40 to-blue-300/20 rounded-full blur-3xl animate-pulse-slow"
    >
    </div>
    <div
      class="absolute -bottom-20 -left-20 w-80 h-80 bg-gradient-to-tr from-blue-300/30 to-blue-200/10 rounded-full blur-3xl animate-pulse-slower"
    >
    </div>
    <div
      class="absolute top-1/3 right-1/4 w-64 h-64 bg-gradient-to-r from-sky-200/30 to-blue-100/20 rounded-full blur-3xl animate-pulse-slow"
      style="animation-delay: -3s;"
    >
    </div>

    <!-- Malla decorativa dinámica -->
    <div
      class="hidden lg:block absolute inset-0 bg-[linear-gradient(to_right,#f0f9ff_1px,transparent_1px),linear-gradient(to_bottom,#f0f9ff_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_110%)] opacity-[0.2]"
    >
    </div>

    <!-- Líneas decorativas mejoradas -->
    <div
      class="hidden lg:block absolute top-32 left-0 w-1/3 h-[1.5px] bg-gradient-to-r from-blue-300/40 to-transparent"
      style="filter: drop-shadow(0 1px 2px rgba(59, 130, 246, 0.3));"
    >
    </div>
    <div
      class="hidden lg:block absolute bottom-40 right-0 w-1/3 h-[1.5px] bg-gradient-to-l from-blue-300/40 to-transparent"
      style="filter: drop-shadow(0 1px 2px rgba(59, 130, 246, 0.3));"
    >
    </div>

    <!-- Elementos flotantes animados -->
    <div
      class="hidden md:block absolute left-20 top-24 w-6 h-6 bg-blue-400 rounded-full opacity-20 animate-float"
    >
    </div>
    <div
      class="hidden md:block absolute right-32 bottom-16 w-4 h-4 bg-blue-500 rounded-full opacity-20 animate-float"
      style="animation-delay: -2s;"
    >
    </div>
    <div
      class="hidden md:block absolute left-1/3 top-1/2 w-3 h-3 bg-blue-300 rounded-full opacity-15 animate-float"
      style="animation-delay: -4s;"
    >
    </div>
    <div
      class="hidden md:block absolute right-1/4 top-1/4 w-5 h-5 bg-sky-400 rounded-full opacity-15 animate-float"
      style="animation-delay: -3s;"
    >
    </div>

    <!-- Patrón de puntos sofisticado -->
    <div
      class="absolute inset-0 opacity-[0.03]"
      style="background-image: radial-gradient(#3b82f6 1px, transparent 1px), radial-gradient(#60a5fa 1px, transparent 1px); background-size: 30px 30px, 50px 50px; background-position: 0 0, 15px 15px;"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 md:px-8 relative z-10">
    <!-- Encabezado de la sección mejorado con efectos 3D y animaciones -->
    <div class="text-center mb-16 relative">
      <!-- Luz de fondo del encabezado -->
      <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-40 h-40 bg-blue-300/30 rounded-full blur-3xl"
      >
      </div>

      <!-- Badge mejorado con efectos -->
      <div
        class="inline-block relative mb-4 transform hover:scale-105 transition-transform duration-300"
      >
        <!-- Anillo de resplandor -->
        <div
          class="absolute -inset-1.5 bg-gradient-to-r from-blue-400/20 to-sky-400/30 rounded-full blur animate-pulse-subtle"
        >
        </div>
        <!-- Badge principal -->
        <span
          class="relative inline-flex items-center gap-1.5 py-1.5 px-4 bg-gradient-to-r from-blue-50 via-white to-blue-50 text-blue-600 text-sm font-semibold rounded-full border border-blue-200/50 shadow-sm"
        >
          <!-- Icono decorativo -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-3.5 w-3.5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          Ubicación
          <!-- Elementos decorativos animados -->
          <div
            class="absolute -top-1 -right-1 w-2 h-2 bg-blue-400 rounded-full animate-ping opacity-70"
          >
          </div>
          <div
            class="absolute -bottom-0.5 -left-0.5 w-1.5 h-1.5 bg-blue-300 rounded-full animate-pulse"
          >
          </div>
        </span>
      </div>

      <!-- Título con efecto 3D y animación -->
      <h2
        class="relative text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-extrabold mb-5"
      >
        <!-- Sombra para efecto 3D -->
        <span
          class="absolute -inset-x-2 inset-y-0 blur-sm text-blue-600/20 select-none pointer-events-none"
          >¿Dónde se realizará?</span
        >
        <!-- Texto con gradiente mejorado -->
        <span
          class="relative bg-gradient-to-br from-blue-600 via-blue-500 to-blue-400 bg-clip-text text-transparent"
          >¿Dónde se realizará?</span
        >
        <!-- Destellos decorativos -->
        <span
          class="absolute top-0 left-1/4 w-8 h-0.5 bg-blue-400/50 blur-sm opacity-70 rotate-45"
        ></span>
        <span
          class="absolute bottom-1/3 right-1/4 w-6 h-0.5 bg-blue-300/50 blur-sm opacity-60 -rotate-45"
        ></span>
      </h2>

      <!-- Línea decorativa animada -->
      <div
        class="relative w-32 h-1.5 mx-auto mt-5 overflow-hidden rounded-full bg-gradient-to-r from-blue-200 via-blue-500 to-blue-200 bg-[length:200%_100%] animate-gradient-x shadow-sm"
      >
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12 items-center">
      <!-- Mapa interactivo mejorado con efectos 3D y decoraciones -->
      <div class="relative z-10 group">
        <!-- Efecto de elevación 3D -->
        <div
          class="absolute -inset-2 bg-gradient-to-r from-blue-400/20 to-blue-600/20 rounded-3xl blur-xl opacity-0 group-hover:opacity-80 transition-opacity duration-700 -z-10"
        >
        </div>

        <!-- Marco decorativo con efectos visuales -->
        <div
          class="rounded-2xl overflow-hidden shadow-[0_10px_30px_-15px_rgba(59,130,246,0.3)] border border-blue-100/80 bg-white h-[420px] md:h-[520px] transform hover:scale-[1.01] transition-all duration-500 relative"
        >
          <!-- Esquinas decorativas -->
          <div
            class="absolute top-0 left-0 w-12 h-12 border-t-2 border-l-2 border-blue-400/60 rounded-tl-2xl z-20"
          >
          </div>
          <div
            class="absolute top-0 right-0 w-12 h-12 border-t-2 border-r-2 border-blue-400/60 rounded-tr-2xl z-20"
          >
          </div>
          <div
            class="absolute bottom-0 left-0 w-12 h-12 border-b-2 border-l-2 border-blue-400/60 rounded-bl-2xl z-20"
          >
          </div>
          <div
            class="absolute bottom-0 right-0 w-12 h-12 border-b-2 border-r-2 border-blue-400/60 rounded-br-2xl z-20"
          >
          </div>

          <!-- Overlay con efectos de degradado mejorados -->
          <div
            class="absolute inset-0 bg-gradient-to-t from-blue-900/40 via-blue-800/10 to-transparent opacity-40 group-hover:opacity-0 transition-all duration-500 ease-out z-10"
          >
          </div>

          <!-- Brillo en las esquinas que aparece en hover -->
          <div
            class="absolute top-0 left-0 w-20 h-20 bg-blue-400/20 rounded-full blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-1000 z-10"
          >
          </div>
          <div
            class="absolute bottom-0 right-0 w-20 h-20 bg-blue-400/20 rounded-full blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-1000 z-10"
          >
          </div>
          <!-- Mapa con iframe -->
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4471.230642781893!2d-75.72808599337466!3d-14.076376117190422!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9110e29172cf48f7%3A0x778bc00fabad62e7!2sColegio%20de%20Ingenieros%20-%20Consejo%20Departamental%20de%20Ica!5e0!3m2!1ses!2spe!4v1746923324210!5m2!1ses!2spe"
            class="w-full h-full relative z-0"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Mapa de ubicación del evento"
          >
          </iframe>
        </div>
      </div>
      <!-- Información de ubicación mejorada con diseño 3D -->
      <div class="space-y-7 lg:space-y-9 p-2">
        <!-- Tarjeta de ubicación -->
        <div class="group relative">
          <!-- Efecto de sombra 3D en hover -->
          <div
            class="absolute -inset-1 bg-gradient-to-tr from-blue-400/20 to-blue-500/20 rounded-2xl blur-lg opacity-0 group-hover:opacity-100 transition-opacity duration-500"
          >
          </div>

          <!-- Tarjeta principal con efectos de profundidad -->
          <div
            class="relative bg-gradient-to-b from-white via-white to-blue-50/30 p-8 rounded-2xl shadow-[0_10px_30px_-15px_rgba(59,130,246,0.25)] border border-blue-100/70 backdrop-blur-sm transform hover:-translate-y-1 transition-all duration-500 hover:shadow-blue-200/20"
          >
            <div class="flex items-start space-x-5">
              <!-- Icono mejorado con efectos -->
              <div class="flex-shrink-0 relative group/icon">
                <!-- Círculo base para el icono -->
                <div
                  class="relative w-14 h-14 flex items-center justify-center"
                >
                  <!-- Fondo con gradiente y animación -->
                  <div
                    class="absolute inset-0 bg-gradient-to-br from-blue-100 to-blue-200 rounded-xl shadow-inner"
                  >
                  </div>

                  <!-- Efecto de resplandor en hover -->
                  <div
                    class="absolute inset-0 bg-blue-400 rounded-xl blur opacity-0 group-hover/icon:opacity-20 transition-opacity duration-300"
                  >
                  </div>

                  <!-- Icono con animación -->
                  <div
                    class="relative transform transition-transform duration-300 group-hover/icon:scale-110"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-7 h-7 text-blue-600"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path
                        d="M12 22s-8-4.5-8-11.8A8 8 0 0 1 12 2a8 8 0 0 1 8 8.2c0 7.3-8 11.8-8 11.8z"
                      ></path>
                      <circle cx="12" cy="10" r="3"></circle>
                    </svg>

                    <!-- Destello decorativo -->
                    <div
                      class="absolute -top-1 -right-1 w-2 h-2 bg-blue-400 rounded-full"
                    >
                    </div>
                  </div>
                </div>
              </div>

              <!-- Contenido con efectos de texto mejorados -->
              <div class="flex-grow">
                <h3
                  class="text-xl font-bold text-gray-800 mb-2.5 group-hover:text-blue-800 transition-colors duration-300 relative inline-block"
                >
                  <!-- Subrayado animado -->
                  <span
                    class="absolute -bottom-1 left-0 right-full h-0.5 bg-blue-400 group-hover:right-0 transition-all duration-500"
                  ></span>
                  Colegio de Ingenieros de Ica
                </h3>
                <p
                  class="text-gray-600 leading-relaxed group-hover:text-gray-700 transition-colors duration-300"
                >
                  <span class="inline-flex items-center">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-4 h-4 mr-1.5 text-blue-500"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                      ></path>
                    </svg>
                    Ca. Nardos 141
                  </span><br />
                  <span class="inline-flex items-center">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-4 h-4 mr-1.5 text-blue-500"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                      ></path>
                    </svg>
                    Ica, Perú
                  </span>
                </p>
              </div>
            </div>
          </div>
        </div>
        <!-- Tarjeta de fecha -->
        <div class="group relative">
          <!-- Efecto de sombra 3D en hover -->
          <div
            class="absolute -inset-1 bg-gradient-to-tr from-blue-400/20 to-blue-500/20 rounded-2xl blur-lg opacity-0 group-hover:opacity-100 transition-opacity duration-500"
          >
          </div>

          <!-- Tarjeta principal con efectos de profundidad -->
          <div
            class="relative bg-gradient-to-b from-white via-white to-blue-50/30 p-8 rounded-2xl shadow-[0_10px_30px_-15px_rgba(59,130,246,0.25)] border border-blue-100/70 backdrop-blur-sm transform hover:-translate-y-1 transition-all duration-500 hover:shadow-blue-200/20"
          >
            <!-- Decoración sutil -->
            <div
              class="absolute top-0 right-0 w-16 h-16 bg-blue-200/10 rounded-full blur-xl"
            >
            </div>

            <div class="flex items-start space-x-5">
              <!-- Icono mejorado con efectos -->
              <div class="flex-shrink-0 relative group/icon">
                <!-- Círculo base para el icono -->
                <div
                  class="relative w-14 h-14 flex items-center justify-center"
                >
                  <!-- Fondo con gradiente y animación -->
                  <div
                    class="absolute inset-0 bg-gradient-to-br from-blue-100 to-blue-200 rounded-xl shadow-inner"
                  >
                  </div>

                  <!-- Efecto de resplandor en hover -->
                  <div
                    class="absolute inset-0 bg-blue-400 rounded-xl blur opacity-0 group-hover/icon:opacity-20 transition-opacity duration-300"
                  >
                  </div>

                  <!-- Icono con animación -->
                  <div
                    class="relative transform transition-transform duration-300 group-hover/icon:scale-110"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-7 h-7 text-blue-600"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <rect x="3" y="4" width="18" height="18" rx="2" ry="2"
                      ></rect>
                      <line x1="16" y1="2" x2="16" y2="6"></line>
                      <line x1="8" y1="2" x2="8" y2="6"></line>
                      <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>

                    <!-- Destello decorativo -->
                    <div
                      class="absolute -top-1 -right-1 w-2 h-2 bg-blue-400 rounded-full"
                    >
                    </div>
                  </div>
                </div>
              </div>

              <!-- Contenido con efectos de texto mejorados -->
              <div class="flex-grow">
                <h3
                  class="text-xl font-bold text-gray-800 mb-2.5 group-hover:text-blue-800 transition-colors duration-300 relative inline-block"
                >
                  <!-- Subrayado animado -->
                  <span
                    class="absolute -bottom-1 left-0 right-full h-0.5 bg-blue-400 group-hover:right-0 transition-all duration-500"
                  ></span>
                  Fecha del evento
                </h3>
                <p
                  class="text-gray-600 leading-relaxed group-hover:text-gray-700 transition-colors duration-300"
                >
                  <span class="inline-flex items-center">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-4 h-4 mr-1.5 text-blue-500"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                      ></path>
                    </svg>
                    <span class="font-medium">21 de junio del 2025</span>
                  </span><br />
                  <span class="inline-flex items-center">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-4 h-4 mr-1.5 text-blue-500"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span class="font-medium">08:00 AM - 05:00 PM</span>
                  </span>
                </p>
              </div>
            </div>
          </div>
        </div>
        <!-- Botón para obtener dirección con efectos 3D y animaciones -->
        <div class="pt-6 text-center md:text-left relative">
          <!-- Luz decorativa detrás del botón -->
          <div
            class="absolute top-1/2 left-1/2 md:left-16 -translate-x-1/2 md:-translate-x-0 -translate-y-1/2 w-32 h-16 bg-blue-400/20 rounded-full blur-xl opacity-50"
          >
          </div>

          <!-- Contenedor del botón con efecto -->
          <div class="relative group/btn inline-block">
            <a
              href="https://maps.app.goo.gl/ckUTt9XmAfZKe54S8"
              target="_blank"
              rel="noopener noreferrer"
              class="group relative inline-flex items-center px-6 py-2.5 rounded-full bg-gradient-to-r from-blue-500 to-blue-600 text-white font-medium transition-all duration-300 hover:shadow-lg hover:shadow-blue-500/25 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 overflow-hidden"
            >
              <!-- Efectos decorativos de luz -->
              <span
                class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-white/50 to-transparent"
              ></span>
              <span
                class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-white/10 to-transparent"
              ></span>
              <span
                class="absolute top-0 left-0 h-full w-px bg-gradient-to-b from-white/50 via-white/10 to-transparent"
              ></span>
              <span
                class="absolute top-0 right-0 h-full w-px bg-gradient-to-b from-white/50 via-white/10 to-transparent"
              ></span>

              <!-- Efecto de brillo en hover -->
              <span
                class="absolute inset-0 w-full h-full bg-[linear-gradient(110deg,transparent,rgba(255,255,255,0.3),transparent)] -translate-x-full group-hover/btn:translate-x-full transition-all duration-1000"
              ></span>

              <!-- Contenido del botón -->
              <span class="relative flex items-center">
                <!-- Icono con animación -->
                <span
                  class="flex items-center justify-center w-8 h-8 rounded-full bg-white/20 mr-3 group-hover/btn:bg-white/30 transition-all duration-300"
                >
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </span>
                <span class="font-semibold">Cómo llegar</span>

                <!-- Flecha animada -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-5 h-5 ml-2 transform transition-transform duration-300 group-hover/btn:translate-x-1"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0% {
      transform: translateY(0) rotate(0);
    }
    50% {
      transform: translateY(-8px) rotate(2deg);
    }
    100% {
      transform: translateY(0) rotate(0);
    }
  }

  @keyframes pulse-slow {
    0%,
    100% {
      opacity: 0.7;
    }
    50% {
      opacity: 0.3;
    }
  }

  @keyframes pulse-slower {
    0%,
    100% {
      opacity: 0.6;
    }
    50% {
      opacity: 0.2;
    }
  }

  @keyframes pulse-subtle {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.9;
      transform: scale(1.03);
    }
  }

  @keyframes gradient-x {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-pulse-slow {
    animation: pulse-slow 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  .animate-pulse-slower {
    animation: pulse-slower 6s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  .animate-pulse-subtle {
    animation: pulse-subtle 3s ease-in-out infinite;
  }

  .animate-gradient-x {
    animation: gradient-x 3s ease infinite;
    background-size: 200% 200%;
  }
</style>
