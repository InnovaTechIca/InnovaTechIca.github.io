---
interface Props {
  text?: string;
  href?: string;
  ctaText?: string;
  date?: string;
}

const {
  text = "¡Regístrate Ahora!",
  href = "/registro",
  ctaText = "No te pierdas esta oportunidad única"
} = Astro.props;
---

<div class="mt-8 pb-2">
  <div class="flex items-center mb-4">
    <div
      class="h-px flex-grow mr-4 bg-gradient-to-l from-blue-500/40 via-blue-400/30 to-transparent"
    >
    </div>
    <div class="flex items-center">
      <span
        class="mr-2 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg p-2 shadow-md shadow-blue-200/40"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 text-white"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"
          ></path>
        </svg>
      </span>
      <h3
        class="text-xl font-bold bg-gradient-to-r from-blue-600 to-blue-700 bg-clip-text text-transparent"
      >
        ¡Únete al evento!
      </h3>
    </div>
  </div>

  <div class="relative mt-6 overflow-hidden rounded-xl">

    <!-- Shining animation effect -->
    <div
      class="absolute inset-0 bg-[linear-gradient(110deg,transparent,rgba(255,255,255,0.3),transparent)] animate-shimmer"
    >
    </div>
    <a
      href={href}
      class="mobile-cta group relative z-10 flex items-center justify-center w-full px-6 py-3 text-white font-semibold text-center transition-all duration-300 inset-0 bg-gradient-to-br from-blue-600 to-blue-800"
    >
      <div class="flex items-center justify-center relative">
        <span
          class="mr-3 bg-white/20 rounded-full p-2 group-hover:bg-white/30 transition-all duration-300"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"
            ></path>
          </svg>
        </span>
        <span class="text-lg relative font-bold">{text}</span>
        <span
          class="absolute right-6 opacity-70 group-hover:opacity-100 group-hover:translate-x-2 transition-all duration-300"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </span>
      </div>
    </a>

    <div
      class="text-center mt-4 text-blue-600 text-sm font-medium flex items-center justify-center"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4 mr-1 text-blue-600"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      {ctaText}
    </div>
  </div>

  <style>
    @keyframes shimmer {
      0% {
        transform: translateX(-100%);
      }
      100% {
        transform: translateX(100%);
      }
    }

    .animate-shimmer {
      animation: shimmer 2.5s infinite;
    }
  </style>
</div>
