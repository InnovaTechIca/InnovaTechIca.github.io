---
// Imports de componentes
import EventHeader from './Proximamente/EventHeader.astro';
import EventDescription from './Proximamente/EventDescription.astro';
import CountdownTimer from './Proximamente/CountdownTimer.astro';
import SocialMedia from './Proximamente/SocialMedia.astro';

// Definición de props
interface Props {
  title: string;
  description: string;
  eventDate?: string;
}

const { title, description, eventDate = "2025-06-21T08:00:00" } = Astro.props;
---

<div class="min-h-screen py-12 px-4 sm:px-6 bg-gradient-to-b from-gray-50 to-white">
  <div class="container mx-auto max-w-5xl">
    <div class="text-center">
      <!-- Encabezado del evento -->
      <EventHeader 
        title={title}
        subtitle="InnovaTech Ica 2025"
        date="21 de Junio, 2025"
      />
      
      <!-- Tarjeta principal con contador -->
      <div class="max-w-3xl mx-auto bg-white p-8 rounded-xl shadow-lg mb-12 transform hover:scale-[1.01] transition-transform duration-300">
        <!-- Descripción del evento -->
        <EventDescription description={description} />
        
        <!-- Contador regresivo -->
        <CountdownTimer eventDate={eventDate} />
      </div>
      
      <!-- Enlaces a redes sociales -->
      <SocialMedia />
    </div>
  </div>
</div>