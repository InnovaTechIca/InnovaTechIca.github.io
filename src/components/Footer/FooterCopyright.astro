---
// Año actual para el copyright
const currentYear = new Date().getFullYear();

interface Props {
  companyName?: string;
}

const { companyName = "Innovatech Ica" } = Astro.props;
---

<div class="border-t border-gray-200/80 pt-8">
  <div class="flex flex-col md:flex-row justify-between items-center">
    <p class="text-sm text-gray-500 mb-4 md:mb-0">
      © {currentYear} {companyName}. Todos los derechos reservados.
    </p>
    
    <div class="flex items-center space-x-6">
      <a href="/terminos" class="text-sm text-gray-500 hover:text-blue-600 transition-colors duration-300">Términos</a>
      <span class="text-gray-300">|</span>
      <a href="/privacidad" class="text-sm text-gray-500 hover:text-blue-600 transition-colors duration-300">Privacidad</a>
    </div>
  </div>
</div>
