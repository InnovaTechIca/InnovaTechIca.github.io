---
// Importamos los componentes modulares para el footer
import FooterLogo from "./FooterLogo.astro";
import FooterSocialLinks from "./FooterSocialLinks.astro";
import FooterNavLinks from "./FooterNavLinks.astro";
import FooterCopyright from "./FooterCopyright.astro";
import FooterDecoration from "./FooterDecoration.astro";
---

<footer class="bg-gradient-to-b from-white to-blue-50 border-t border-gray-200/80">
  <div class="relative overflow-hidden">
    <!-- Decoraciones del footer -->
    <FooterDecoration />
    
    <div class="container mx-auto px-4 pt-16 pb-8 relative">
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
        <!-- Columna 1: Logo y descripción -->
        <div class="col-span-1 lg:col-span-1">
          <FooterLogo />
          <FooterSocialLinks />
        </div>
        
        <!-- Columnas 2-4: Enlaces de navegación -->
        <div class="col-span-1 md:col-span-1 lg:col-span-3 grid grid-cols-1 md:grid-cols-2 gap-8">
          <FooterNavLinks />
        </div>
      </div>
        <!-- Copyright y créditos -->
      <FooterCopyright />    </div>
  </div>
</footer>

<style>
  /* Estilos compartidos del footer */
  .shadow-glow {
    box-shadow: 0 0 8px rgba(59, 130, 246, 0.6);
  }
  
  /* Animación para elementos hover */
  @keyframes pulseGlow {
    0% {
      box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.3);
    }
    70% {
      box-shadow: 0 0 0 6px rgba(59, 130, 246, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(59, 130, 246, 0);
    }
  }
  
  /* Estilos para mejorar la accesibilidad y el foco */
  a:focus-visible {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
    border-radius: 0.25rem;
  }
  
  /* Animación para links en hover */
  a.animated-link {
    position: relative;
  }
  
  a.animated-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -2px;
    left: 0;
    background-color: #3b82f6;
    transition: width 0.3s ease-in-out;
  }
  
  a.animated-link:hover::after {
    width: 100%;
  }
</style>