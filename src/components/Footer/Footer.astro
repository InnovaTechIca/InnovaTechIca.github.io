---
// Importamos componentes que podríamos necesitar
import AnimatedLogo from "../AnimatedLogo.astro";

interface FooterLink {
  name: string;
  href: string;
}

interface FooterSection {
  title: string;
  links: FooterLink[];
}

// Enlaces del footer, organizados por secciones
const footerSections: FooterSection[] = [
  {
    title: "Navegación",
    links: [
      { name: "Inicio", href: "/" },
      { name: "Cronograma", href: "/cronograma"},
      { name: "Ponentes", href: "/ponentes" },
      { name: "Sponsors", href: "/sponsors" },
      { name: "Equipo", href: "/equipo"}
    ]
  },
  {
    title: "Recursos",
    links: [
      { name: "Registro", href: "/registro" },
      { name: "Certificados", href: "/certificados" }
    ]
  },
  {
    title: "Legal",
    links: [
      { name: "Términos y Condiciones", href: "/terminos" },
      { name: "Política de Privacidad", href: "/privacidad" }
    ]
  }
];

// Año actual para el copyright
const currentYear = new Date().getFullYear();
---

<footer class="bg-gradient-to-b from-white to-blue-50 border-t border-gray-200/80">
  <div class="relative overflow-hidden">
    <!-- Decoración de fondo -->
    <div class="absolute inset-0 bg-gradient-to-r from-blue-50/30 via-transparent to-blue-50/30 pointer-events-none"></div>
    
    <!-- Capa decorativa con círculos sutiles -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 rounded-full bg-blue-100/20 blur-3xl"></div>
      <div class="absolute -bottom-40 -left-20 w-60 h-60 rounded-full bg-blue-100/30 blur-3xl"></div>
    </div>
    
    <div class="container mx-auto px-4 pt-16 pb-8 relative">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
        <!-- Logo y descripción -->
        <div class="col-span-1 lg:col-span-1">
          <div class="flex items-center mb-4">
            <AnimatedLogo loading="lazy" />
          </div>
          <p class="text-gray-600 mt-4 text-sm leading-relaxed">
            Innovatech es el evento tecnológico más importante del año, reuniendo a expertos de la industria y entusiastas de la tecnología para compartir conocimientos y explorar las últimas tendencias.
          </p>
          
          <!-- Redes sociales -->
          <div class="mt-6 flex space-x-4">
            <a href="/" class="w-10 h-10 rounded-full bg-white shadow-sm flex items-center justify-center text-blue-600 transition-all hover:bg-blue-600 hover:text-white hover:shadow-md">
              <span class="sr-only">Facebook</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z" />
              </svg>
            </a>
            <a href="/" class="w-10 h-10 rounded-full bg-white shadow-sm flex items-center justify-center text-blue-600 transition-all hover:bg-blue-600 hover:text-white hover:shadow-md">
              <span class="sr-only">Instagram</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
              </svg>
            </a>
            <a href="/" class="w-10 h-10 rounded-full bg-white shadow-sm flex items-center justify-center text-blue-600 transition-all hover:bg-blue-600 hover:text-white hover:shadow-md">
              <span class="sr-only">TikTok</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
              </svg>
            </a>
          </div>
        </div>
        
        <!-- Secciones de enlaces -->
        {footerSections.map((section) => (
          <div>
            <h3 class="font-semibold text-blue-800 text-lg mb-4">{section.title}</h3>
            <ul class="space-y-3">
              {section.links.map((link) => (
                <li>
                  <a 
                    href={link.href}
                    class="text-gray-600 hover:text-blue-600 transition-colors duration-300 flex items-center group"
                  >
                    <span class="w-1.5 h-1.5 mr-2 rounded-full bg-blue-200 group-hover:bg-blue-500 group-hover:shadow-glow transition-all duration-300"></span>
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
      
      <!-- Copyright y créditos -->
      <div class="border-t border-gray-200/80 pt-8">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <p class="text-sm text-gray-500 mb-4 md:mb-0">
            © {currentYear} Innovatech. Todos los derechos reservados.
          </p>
          
          <div class="flex items-center space-x-6">
            <a href="/terminos" class="text-sm text-gray-500 hover:text-blue-600 transition-colors duration-300">Términos</a>
            <a href="/privacidad" class="text-sm text-gray-500 hover:text-blue-600 transition-colors duration-300">Privacidad</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Sombra con brillo para iconos sociales */
  .shadow-glow {
    box-shadow: 0 0 8px rgba(59, 130, 246, 0.6);
  }
  
  /* Animación para elementos hover */
  @keyframes pulseGlow {
    0% {
      box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.3);
    }
    70% {
      box-shadow: 0 0 0 6px rgba(59, 130, 246, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(59, 130, 246, 0);
    }
  }
</style>