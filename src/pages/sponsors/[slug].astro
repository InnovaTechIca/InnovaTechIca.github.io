---
import Layout from "../../layouts/Layout.astro";
import { sponsors } from "../../data/sponsors";
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  return sponsors.map((sponsor) => ({
    params: { slug: sponsor.id },
    props: { sponsor },
  }));
}

const { sponsor } = Astro.props;
const { 
  nombre, logo, descripcion, sitioWeb, redesSociales 
} = sponsor;
---

<Layout title={`${nombre} - InnovaTech Ica 2025`}>
  
  <main class="min-h-screen py-16">
    <div class="max-w-6xl mx-auto px-4 pb-16">
      <a href="/sponsors" class="inline-flex items-center text-blue-600 hover:text-blue-800 mb-8 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Volver a sponsors
      </a>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <!-- Información del sponsor -->
        <div>
          
          <div class="prose prose-blue max-w-none mb-8">
            <h2 class="text-2xl font-semibold mb-4">Sobre la organización</h2>
            <p>{descripcion}</p>
          </div>
          
          <div class="mb-8">
            <h2 class="text-2xl font-semibold mb-4">Enlaces</h2>
            <div class="flex flex-wrap gap-4">
              <a 
                href={sitioWeb} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 border border-blue-300 rounded-md bg-blue-50 text-blue-700 hover:bg-blue-100 transition-colors"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                </svg>
                Sitio web
              </a>
            </div>
          </div>

          <div class="mb-8">
            <h2 class="text-2xl font-semibold mb-4">Redes Sociales</h2>
            <div class="flex gap-4">
              {redesSociales.linkedin && (
                <a href={redesSociales.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="text-gray-600 hover:text-blue-600 transition-colors">
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                </a>
              )}
              
              {redesSociales.twitter && (
                <a href={redesSociales.twitter} target="_blank" rel="noopener noreferrer" aria-label="Twitter" class="text-gray-600 hover:text-blue-400 transition-colors">
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723 10.029 10.029 0 01-3.24 1.244 4.92 4.92 0 00-8.39 4.49 13.957 13.957 0 01-10.14-5.138 4.898 4.898 0 001.526 6.573 4.998 4.998 0 01-2.237-.616v.061a4.928 4.928 0 003.95 4.829 4.993 4.993 0 01-2.226.084 4.935 4.935 0 004.6 3.42A9.869 9.869 0 011 20.54a14.002 14.002 0 007.557 2.209c9.054 0 14-7.497 14-14.001 0-.214-.005-.427-.014-.639.962-.69 1.8-1.558 2.461-2.539z"></path>
                  </svg>
                </a>
              )}
              
              {redesSociales.facebook && (
                <a href={redesSociales.facebook} target="_blank" rel="noopener noreferrer" aria-label="Facebook" class="text-gray-600 hover:text-blue-700 transition-colors">
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 5.234 4.005 9.54 9 9.95v-7h-3V12h3V9.796c0-2.791 1.784-4.296 4.155-4.296 1.176 0 2.406.209 2.406.209v2.727h-1.36C15.356 8.436 15 9.095 15 9.846V12h3.275l-.585 3h-2.69v6.95C17.996 21.54 22 17.234 22 12z"></path>
                  </svg>
                </a>
              )}
              
              {redesSociales.instagram && (
                <a href={redesSociales.instagram} target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="text-gray-600 hover:text-pink-500 transition-colors">
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0c-3.26 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948s.014 3.667.072 4.947c.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948s-.014-3.667-.072-4.947c-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.76-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                </a>
              )}
              
              {redesSociales.github && (
                <a href={redesSociales.github} target="_blank" rel="noopener noreferrer" aria-label="GitHub" class="text-gray-600 hover:text-gray-900 transition-colors">
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.373 0 0 5.373 0 12c0 5.302 3.438 9.8 8.205 11.387.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61-.546-1.384-1.333-1.756-1.333-1.756-1.087-.744.084-.729.084-.729 1.205.84 1.838 1.236 1.838 1.236 1.07 1.835 2.807 1.305 3.495.998.108-.775.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 21.795 24 17.298 24 12c0-6.627-5.373-12-12-12"/>
                  </svg>
                </a>
              )}
            </div>
          </div>
        </div>
        
        <!-- Logo del sponsor -->
        <div class="order-first md:order-last">
          <div class="p-1 bg-gradient-to-r from-blue-500 via-blue-400 to-blue-300 rounded-lg shadow-md">
            <div class="bg-white p-8 rounded-md flex items-center justify-center">
              <Image 
                src={logo} 
                alt={`Logo de ${nombre}`}
                width={400}
                height={300}
                class="max-w-full h-auto object-contain"
                transition:name={`imagen-${sponsor.nombre}`}
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
