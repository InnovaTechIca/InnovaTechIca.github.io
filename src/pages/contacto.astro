---
import Layout from "../layouts/Layout.astro";
import ContactHeader from "../ui/contacto/ContactHeader.astro";
import ContactInfo from "../ui/contacto/ContactInfo.astro";
import ContactForm from "../ui/contacto/ContactForm.astro";

const contactItems = [
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
    </svg>`,
    title: "Email",
    content: "InnovaTechGroupUNICA@gmail.com"
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
    </svg>`,
    title: "Teléfono",
    content: "+51 902 726 614"
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
    </svg>`,
    title: "Ubicación",
    content: "Ica, Perú"
  }
];
---

<Layout title="Contacto | InnovaTech Ica 2025">
  <main class="min-h-screen bg-gradient-to-b from-white to-gray-50">
    <!-- Sección de patrón de fondo decorativo -->
    <div class="absolute inset-0 overflow-hidden -z-10">
      <div class="absolute inset-0 opacity-[0.03] bg-repeat" style="background-image: url('/assets/pattern-grid.svg');"></div>
    </div>
    
    <!-- Contenido principal -->
    <ContactHeader />
    
    <!-- Información de contacto -->
    <ContactInfo items={contactItems} />
    
    <!-- Formulario de contacto -->
    <ContactForm />
  </main>
</Layout>
