---
import Layout from "../../layouts/Layout.astro";
import { ponentes } from "../../data/ponentes";
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  return ponentes.map((ponente) => ({
    params: { slug: ponente.id },
    props: { ponente },
  }));
}

const { ponente } = Astro.props;
const { 
  nombre, cargo, empresa, bio, foto, redesSociales, 
  temaCharla, horaCharla, descripcionCharla
} = ponente;
---

<Layout title={`${nombre} - InnovaTech Ica 2025`}>
  
  <main class="min-h-screen py-16">
    <div class="max-w-6xl mx-auto px-4 pb-16">
      <a href="/ponentes" class="inline-flex items-center text-blue-600 hover:text-blue-800 mb-8 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Volver a ponentes
      </a>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <!-- Información del ponente -->
        <div>
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">{nombre}</h1>
          <p class="text-xl text-blue-700 mb-1">{cargo}</p>
          <p class="text-lg text-gray-600 mb-6">{empresa}</p>
          
          <div class="prose prose-blue max-w-none mb-8">
            <h2 class="text-2xl font-semibold mb-4">Presentación</h2>
            <p>{bio}</p>
          </div>
  
          
          <div class="mb-8">
            <h2 class="text-2xl font-semibold mb-4">Redes Sociales</h2>
            <div class="flex gap-4">
              {redesSociales.linkedin && (
                <a href={redesSociales.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="text-gray-600 hover:text-blue-600 transition-colors">
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                </a>
              )}
              
              {redesSociales.twitter && (
                <a href={redesSociales.twitter} target="_blank" rel="noopener noreferrer" aria-label="Twitter" class="text-gray-600 hover:text-blue-400 transition-colors">
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723 10.054 10.054 0 01-3.127 1.184 4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                </a>
              )}
              
              {redesSociales.github && (
                <a href={redesSociales.github} target="_blank" rel="noopener noreferrer" aria-label="GitHub" class="text-gray-600 hover:text-gray-900 transition-colors">
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              )}
              
              {redesSociales.website && (
                <a href={redesSociales.website} target="_blank" rel="noopener noreferrer" aria-label="Website" class="text-gray-600 hover:text-green-600 transition-colors">
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm1 16.057v-3.057h2.994c-.059 1.143-.212 2.24-.456 3.279-.823-.12-1.674-.188-2.538-.222zm1.957 2.162c-.499 1.33-1.159 2.497-1.957 3.456v-3.62c.666.028 1.319.081 1.957.164zm-1.957-7.219v-3.015c.868-.034 1.721-.103 2.548-.224.238 1.027.389 2.111.446 3.239h-2.994zm0-5.014v-3.661c.806.969 1.471 2.15 1.971 3.496-.642.084-1.3.137-1.971.165zm2.703-3.267c1.237.496 2.354 1.228 3.29 2.146-.642.234-1.311.442-2.019.607-.344-.992-.775-1.91-1.271-2.753zm-7.241 13.56c-.244-1.039-.398-2.136-.456-3.279h2.994v3.057c-.865.034-1.714.102-2.538.222zm2.538 1.776v3.62c-.798-.959-1.458-2.126-1.957-3.456.638-.083 1.291-.136 1.957-.164zm-2.994-7.055c.057-1.128.207-2.212.446-3.239.827.121 1.68.19 2.548.224v3.015h-2.994zm1.024-5.179c.5-1.346 1.165-2.527 1.97-3.496v3.661c-.671-.028-1.329-.081-1.97-.165zm-2.005-.35c-.708-.165-1.377-.373-2.018-.607.937-.918 2.053-1.65 3.29-2.146-.496.844-.927 1.762-1.272 2.753zm-.549 1.918c-.264 1.151-.434 2.36-.492 3.611h-3.933c.165-1.658.739-3.197 1.617-4.518.88.361 1.816.67 2.808.907zm.009 9.262c-.988.236-1.92.542-2.797.9-.89-1.328-1.471-2.879-1.637-4.551h3.934c.058 1.265.231 2.488.5 3.651zm.553 1.917c.342.976.768 1.881 1.257 2.712-1.223-.49-2.326-1.211-3.256-2.115.636-.229 1.299-.435 1.999-.597zm9.924 0c.7.163 1.362.367 1.999.597-.931.903-2.034 1.625-3.257 2.116.489-.832.915-1.737 1.258-2.713zm.553-1.917c.27-1.163.442-2.386.501-3.651h3.934c-.167 1.672-.748 3.223-1.638 4.551-.877-.358-1.81-.664-2.797-.9zm.501-5.651c-.058-1.251-.229-2.46-.492-3.611.992-.237 1.929-.546 2.809-.907.877 1.321 1.451 2.86 1.616 4.518h-3.933z"/>
                  </svg>
                </a>
              )}
            </div>
          </div>
        </div>
        
        <!-- Foto y detalles de la charla -->
        <div>          <div class="rounded-lg overflow-hidden shadow-xl mb-8 aspect-[3/4] relative">
            <Image 
              src={foto} 
              alt={`Foto profesional de ${nombre}, ${cargo} en ${empresa}`} 
              class="w-full h-full object-cover object-center filter brightness-105 contrast-105 saturate-110" 
              transition:name={`imagen-${ponente.id}`}
              width={500}
              height={667}
              quality={100}
              format="webp"
              densities={[1, 2]}
              loading="eager"
            />
            <!-- Overlay sutil para mejorar contraste del texto si es necesario -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/5 to-transparent opacity-0 hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          
          <div class="bg-blue-50 p-6 rounded-lg border border-blue-100 shadow-sm">
            <h2 class="text-2xl font-bold text-blue-900 mb-4">Información de la charla</h2>
            
            <div class="mb-3 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-700 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-blue-700 font-medium">{horaCharla}</span>
            </div>
            
            <h3 class="text-xl font-semibold text-gray-800 mb-2">"{temaCharla}"</h3>
            <p class="text-gray-700">{descripcionCharla}</p>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
